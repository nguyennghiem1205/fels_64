<% provide :title, t("edit_profile") %>
<h1><%= t :edit_profile %></h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for @user do |f| %>
      <%= render "shared/error_messages", object: f.object %>

      <%= f.label :username, t("name") %>
      <%= f.text_field :username, class: "form-control" %>

      <%= f.label :email %>
      <%= f.email_field :email, class: "form-control" %>

      <%= f.label :password %>
      <%= f.password_field :password, class: "form-control" %>

      <%= f.label :password_confirmation, t("confirm_label") %>
      <%= f.password_field :password_confirmation, class: "form-control" %>

      <span class="picture">
        <%= f.label :picture, t("update_avatar") %><br />
        <%= image_tag @user.picture? ? @user.picture.url : Settings.avata_default,
          size: Settings.size_picture_display %>
        <%= f.file_field :picture, accept: Settings.image_type_accept %>
      </span>

      <%= f.submit t("save_change_button"), class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
